@model BeachSys.Models.Armario

@{
    ViewData["Title"] = "Criar";
}

<div class="card mx-auto p-3" style="width: 36rem;">
  <div class="card-body">
    <form method="post" asp-controller="Armario" asp-action="Criar">
      <div class="mb-3">
        <label asp-for="Nome" class="form-label"></label>
        <input asp-for="Nome" class="form-control">
        <span asp-validation-for="Nome" class="text-danger"></span>
      </div>
      <div class="mb-3">
        <label asp-for="PontoX" class="form-label"></label>
        <input asp-for="PontoX" class="form-control">
        <span asp-validation-for="PontoX" class="text-danger"></span>
      </div>
      <div class="mb-3">
        <label asp-for="PontoY" class="form-label"></label>
        <input asp-for="PontoY" class="form-control">
        <span asp-validation-for="PontoY" class="text-danger"></span>
      </div>
      <button type="submit" class="btn btn-primary">Criar</button>
    </form>
  </div>
</div>